<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UI"
        Title="Main Window" Height="450" Width="800">
    <DockPanel>
       
        <StackPanel x:Name="NavPanel" 
                    Orientation="Horizontal" 
                    DockPanel.Dock="Top" 
                    Background="LightGray" 
                    Height="50">
            
                    
            
            <Button x:Name="btnAddUser" Content="Add User" Margin="10,5"/>
            <Button x:Name="btnAllUsers" Content="All Users" Margin="10,5"/>
            <Button x:Name="btnStudents" Content="Students" Margin="10,5"/>
        </StackPanel>

        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="40" HorizontalAlignment="Right" Margin="0,0,10,10">
            <Button Content="Logout" Width="80" Height="25" Click="LogoutButton_Click"/>
        </StackPanel>

      
        <ContentControl x:Name="MainContentArea"/>
    </DockPanel>
</Window>
